# Example environment file for salesforce-ai-bridge
# Copy to .env and fill with real values (do NOT commit real .env with secrets)

# Server Configuration
PORT=3001
NODE_ENV=development

# AI Provider Selection
# Choose: 'openrouter', 'anthropic', 'perplexity', or 'openai'
AI_PROVIDER=openrouter

# OpenRouter API Configuration (for AI_PROVIDER=openrouter)
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_MODEL=meta-llama/llama-4-maverick:free
OPENROUTER_APP_NAME=Salesforce-AI-Bridge
OPENROUTER_SITE_URL=http://localhost:3001

# OpenAI API Configuration (for AI_PROVIDER=openai)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-5-mini

# Anthropic API Configuration (for AI_PROVIDER=anthropic)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Perplexity API Configuration (for AI_PROVIDER=perplexity)
PERPLEXITY_API_KEY=your-perplexity-api-key-here
PERPLEXITY_MODEL=sonar-reasoning
# Optional: override API base URL if needed
# PERPLEXITY_API_BASE_URL=https://api.perplexity.ai

# MCP Salesforce Server Configuration
MCP_SERVER_URL=http://localhost:3000/mcp

# CORS Configuration
ALLOWED_ORIGINS=*

# Session Configuration
SESSION_TIMEOUT_MS=1800000

# Salesforce Authentication Configuration
REQUIRE_SALESFORCE_AUTH=true

# Token validation cache TTL (5 minutes = 300000 ms)
SALESFORCE_TOKEN_VALIDATION_TTL=300000

# Per-user rate limit (requests per minute)
USER_RATE_LIMIT_PER_MINUTE=10
