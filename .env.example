# Server Configuration
PORT=3001
NODE_ENV=development

# AI Provider Selection
# Choose: 'openrouter' (free, good for development) or 'anthropic' (paid, best quality)
AI_PROVIDER=openrouter

# OpenRouter API Configuration (for AI_PROVIDER=openrouter)
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_MODEL=meta-llama/llama-4-maverick:free
OPENROUTER_APP_NAME=Salesforce-AI-Bridge
OPENROUTER_SITE_URL=http://localhost:3001

# Anthropic API Configuration (for AI_PROVIDER=anthropic)
# ANTHROPIC_API_KEY=sk-ant-your-key-here
# ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# MCP Salesforce Server Configuration
# Your hosted MCP server URL
MCP_SERVER_URL=https://mcp-server-salesforce-c5ma.onrender.com/mcp

# CORS Configuration
ALLOWED_ORIGINS=https://your-salesforce-domain.lightning.force.com

# Session Configuration
SESSION_TIMEOUT_MS=1800000

# Salesforce Authentication Configuration
# Set to true to require Salesforce OAuth tokens on every request
REQUIRE_SALESFORCE_AUTH=true

# Token validation cache TTL (5 minutes = 300000 ms)
# Reduces API calls to Salesforce by caching token validation
SALESFORCE_TOKEN_VALIDATION_TTL=300000

# Per-user rate limit (requests per minute)
USER_RATE_LIMIT_PER_MINUTE=10
